FROM debian:buster

SHELL ["/bin/bash", "--login", "-c"]

RUN su -

RUN  apt upgrade && apt update && apt-get install vim -y

RUN  apt-get install -y curl wget

RUN  apt install nodejs  npm -y

RUN npm install -g @angular/cli

RUN cd ~

RUN curl -o- https://github.com/Fatma-Ozturk/FtTranscendenceUI.git | bash

RUN cd FtTranscendenceUI

RUN npm i 

RUN ng s --o 